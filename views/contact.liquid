{% render 'partials/head.liquid', title: 'contact' %}

<main class="main-contact">

    {% if message %}
        <div class="contact-popup">{{ message }}</div>
    {% endif %}

    <form class="contact-form" action="/contact" method="POST">
        <h1>Stuur ons een berichtje!</h1>
        <ul class="contact-form-body">
            <li class="form-group">
                Naam <span>*</span>
                <ul class="form-naam">
                    <li>
                        <label for="surname">Voornaam</label>
                        <input type="text" id="surname" name="surname" required>
                    </li>

                    <li>
                        <label for="lastname">Achternaam</label>
                        <input type="text" id="lastname" name="lastname" required>
                    </li>
                </ul>
            </li>

            <li class="form-group">
                <label for="email">E-mailadres <span>*</span></label>
                <input type="email" id="email" name="email" required>
            </li>

            <li class="form-group">
                <label for="message">Bericht <span>*</span></label>
                <textarea id="message" name="message" rows="5" required></textarea>
            </li>

            <button class="button-contact-submit" type="submit">Verzenden</button>
        </ul>
    </form>

</main>

{% render 'partials/foot.liquid' %}